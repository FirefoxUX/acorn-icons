{
  "name": "actions",
  "version": "1.0.0",
  "type": "module",
  "description": "A collection of actions for the acorn icon repository",
  "scripts": {
    "copy": "copyfiles -u 1 -e \"**/*.ts\" \"src/**/*\" dist",
    "build": "tsc && npm run copy",
    "lint": "eslint -c .eslintrc.cjs src/",
    "prettier": "prettier -c .prettierrc.cjs --write --check 'src/**/*.*'"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "prettier": "^3.1.1",
    "simple-git": "^3.22.0",
    "fast-glob": "^3.3.2",
    "svgo": "^3.2.0"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.2.2",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "typescript": "5.3.3"
  }
}